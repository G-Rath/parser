{
  "compilerOptions": {
    "declaration": true,
    "module": "commonjs",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "importHelpers": true,
    "lib": [
      "es2016",
      "es2017.object"
    ],
    "outDir": "./lib",
    "removeComments": true,
    "strict": true,
    "target": "es2017"
  },
  "include": [
    "./src/**/*"
  ]
}
